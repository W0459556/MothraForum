@model MothraForum.Models.Discussion

@{
    ViewData["Title"] = "Edit Discussion";
}

<div class="container mt-5">
    <div class="rounded-4 post-d p-4 text-white">
        <form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="DiscussionId" />
            <input type="hidden" asp-for="ImageFilename" /> <!-- Preserve the existing image -->

            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" id="Title" name="Title" class="form-control bg-dark" value="@Model.Title">
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageFilename))
            {
                <div class="col-12 mb-3">
                    <img src="@Url.Content("~/images/" + Model.ImageFilename)" alt="@Model.Title" class="img-fluid">
                </div>
            }

            <div class="mb-3">
                <label for="Content" class="form-label">Content</label>
                <textarea id="Content" name="Content" class="form-control bg-dark text-light" rows="5">@Model.Content</textarea>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">Replace Image (Optional)</label>
                <input asp-for="ImageFile" type="file" class="form-control bg-dark" />
            </div>

            <div class="row">
                <div class="col-6 d-flex align-items-center">
                </div>

                <div class="col-6 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary mx-3">Save</button>
                    <a asp-action="DiscussionDetails" asp-route-id="@Model.DiscussionId" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
