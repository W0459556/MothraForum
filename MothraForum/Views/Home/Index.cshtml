@model IEnumerable<MothraForum.Models.Discussion>

@{
    ViewData["Title"] = "Discussions";
}

<h1>Discussions</h1>

<!-- Display all discussions -->
@foreach (var discussion in Model)
{
    <div>
        <h2>@discussion.Title</h2>
        <p>@discussion.Content</p>
        <p><strong>Created at:</strong> @discussion.CreatedAt</p>

        <!-- Optional: Display image if available -->
        @if (!string.IsNullOrEmpty(discussion.ImageFilename))
        {
            <img src="@Url.Content("~/uploads/" + discussion.ImageFilename)" alt="Discussion Image" style="max-width: 200px;" />
        }

        <hr />
    </div>
}

<!-- Button to add new discussion -->
<a href="@Url.Action("Create", "Discussion")" class="btn btn-primary">Add New Discussion</a>
