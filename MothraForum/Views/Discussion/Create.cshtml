@model MothraForum.Models.Discussion

@{
    ViewData["Title"] = "Create Discussion";
}

<div class="container mt-5">
    <div class="rounded-4 post-d p-4 text-white">
        <h1>Create a New Discussion</h1>
        <form asp-controller="Discussion" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" style="color:black !important;" required />
            </div>

            <div class="mb-3">
                <label asp-for="Content" class="form-label">Content</label>
                <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">Attach Image (Optional)</label>
                <input asp-for="ImageFile" type="file" class="form-control text-white bg-dark" />
            </div>

            <div class="row">
                <div class="col-6 d-flex align-items-center">
                </div>

                <div class="col-6 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary mx-3">Post</button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
