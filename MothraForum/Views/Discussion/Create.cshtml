@model MothraForum.Models.Discussion

@{
    ViewData["Title"] = "Create Discussion";
}

<h1>Create a New Discussion</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" id="Title" name="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="Content" name="Content" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label for="ImageFile">Attach Image (Optional)</label>
        <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a href="@Url.Action("Index", "Discussion")" class="btn btn-secondary mt-2">Back to Discussions</a>
